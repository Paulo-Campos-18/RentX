generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum RentalStatus {
  Andamento
  Terminada
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String
  rentals Rental[]
}

model Car {
  id         Int      @id @default(autoincrement())
  placa      String
  disponivel Boolean @default(true)
  rentals    Rental[]
}

model Rental {
  id        Int      @id @default(autoincrement())
  user_id   Int
  car_id    Int
  startDate DateTime @default(now())
  endDate   DateTime
  status    RentalStatus @default(Andamento)

  user User @relation(fields: [user_id], references: [id])
  car  Car  @relation(fields: [car_id], references: [id])
}
